<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".StudentActivity">

    <Button
        android:id="@+id/logOut2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="112dp"
        android:gravity="center"
        android:text="Click here to log out"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/unenrollBtn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"


        android:layout_marginStart="156dp"
        android:layout_marginTop="16dp"
        android:text="@string/unenroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/course_listView" />

    <Button
        android:id="@+id/enrolBtn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"


        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/enroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/course_listView" />

    <Button
        android:id="@+id/viewAll2"
        android:layout_width="125dp"
        android:layout_height="wrap_content"


        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/viewAll"
        app:layout_constraintStart_toEndOf="@+id/unenrollBtn"
        app:layout_constraintTop_toBottomOf="@+id/course_listView" />

    <ListView
        android:id="@+id/course_listView"
        android:layout_width="392dp"
        android:layout_height="371dp"

        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/course_day" />

    <Button
        android:id="@+id/searchByDBtn"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/searchByDay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.714"
        app:layout_constraintStart_toEndOf="@+id/course_day"
        app:layout_constraintTop_toBottomOf="@+id/searchByCBtn2" />

    <Button
        android:id="@+id/searchByCBtn2"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/searchByCode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.714"
        app:layout_constraintStart_toEndOf="@+id/course_Code2"
        app:layout_constraintTop_toBottomOf="@+id/searchByNBtn2" />

    <Button
        android:id="@+id/searchByNBtn2"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="@string/searchByName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/course_Name2"
        app:layout_constraintTop_toTopOf="@+id/course_Name2" />

    <EditText
        android:id="@+id/course_day"
        android:layout_width="240dp"
        android:layout_height="51dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:hint="@string/CourseDay"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/course_Code2" />

    <EditText
        android:id="@+id/course_Code2"
        android:layout_width="240dp"
        android:layout_height="56dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:hint="@string/CourseCode"
        android:inputType="textPersonName"

        android:minHeight="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/course_Name2" />

    <EditText
        android:id="@+id/course_Name2"
        android:layout_width="240dp"
        android:layout_height="51dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:hint="@string/CourseName"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeMsg1" />

    <TextView
        android:id="@+id/welcomeMsg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="PlaceHolder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>